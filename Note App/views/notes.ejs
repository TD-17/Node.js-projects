<html>

<head>
  <title>SIMPLE NOTE APP</title>
  <link rel="stylesheet" href="./style.css">
</head>

<body>
  <div class="container">
    <div class="jumbotron">
      <h2>Note App</h2>
      <form action="/addNotes" method="POST">
        <div class="form-group">
          <textarea class="form-control" type="text" name="newNote" id="newNote" placeholder="Add new Note"></textarea>
          <button class="btn btn-success" type="submit">Add Note</button>
        </div>
    </div>
    </form>

    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">NOTES</th>
          <th scope="col">ACTION</th>
        </tr>
      </thead>
      <tbody>
        <% note.map((i, index) => { %>
         <tr>
          <th scope="row"><%= index+1 %></th>
          <td><%= i.body %></td>
          <td>
          <form action='<%= /deleteNote/ +i.id%>' method="POST">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
          </td>
        </tr>
        <% }) %>


      </tbody>
    </table>

    <div class="footer">
      <p>Copyright &copy 2020 ZinnyCodes</p>
    </div>
</body>


</html>